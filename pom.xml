  <groupId>com.yvdedu</groupId>
  <artifactId>SpringMaven</artifactId>
  <packaging>war</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>SpringMaven Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <dependencies>
